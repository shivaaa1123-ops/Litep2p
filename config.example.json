{
        /*
            Example config for LiteP2P.

            IMPORTANT:
            - Do NOT commit real TURN credentials or private infrastructure endpoints to git.
            - For GitHub self-hosted runners, place your real config at:
                /etc/litep2p/config.json
              (or adjust the workflow CONFIG_PATH accordingly).
        */
    "network": {
        "default_server_port": 30001,
        "discovery_port": 30000,
        "listen_backlog": 5,
        "select_max_retries": 3
    },
    "communication": {
        "default_protocol": "UDP",
        "quic": {
            "enabled": true,
            "port": 30001,
            "buffer_size": 1048576
        },
        "udp": {
            "enabled": true,
            "port": 30001,
            "buffer_size": 65535,
            "timeout_ms": 5000,
            "select_timeout_sec": 1
        },
        "tcp": {
            "enabled": true,
            "port": 30001,
            "nodelay": true,
            "buffer_size": 4096,
            "connect_timeout_sec": 5,
            "select_timeout_sec": 1
        }
    },
    "peer_management": {
        "peer_timeout_sec": 30,
        "timer_tick_interval_sec": 10,
        "ping_interval_sec": 10,
        "heartbeat_interval_sec": 10,
        "peer_expiration_timeout_ms": 30000,
        "max_queued_messages": 100,
        "max_message_size": 10485760,
        "max_handshake_retries": 3
    },
    "discovery": {
        "message_prefix": "LITEP2P_DISCOVERY",
        "max_message_size": 1024,
        "broadcast_interval_sec": 5
    },
    "security": {
        "noise_nk_protocol": {
            "enabled": true,
            "mandatory": true,
            "key_store_path": "keystore",
            "key_rotation_interval_hours": 24
        },
        "selective_encryption_enabled": true
    },
    "batch_connection_manager": {
        "enabled": true,
        "max_peers_per_batch": 10,
        "max_batches": 5,
        "batch_delay_ms": 100,
        "batch_max_messages": 50,
        "cleanup_interval_ms": 60000
    },
    "session_manager": {
        "num_workers": 4,
        "cache_size": 100,
        "cache_lifetime_sec": 3600,
        "session_timeout_ms": 30000,
        "max_concurrent_sessions": 100
    },
    "event_manager": {
        "queue_wait_timeout_ms": 100,
        "timer_tick_interval_ms": 500,
        "thread_sleep_ms": 100
    },
    "performance": {
        "event_thread_pool_workers": 4,
        "message_batcher_enabled": true,
        "session_caching_enabled": true,
        "buffer_pool_size": 16,
        "cleanup_thread_sleep_sec": 10,
        "shutdown_delay_ms": 100
    },
    "battery_optimizer": {
        "enabled": true,
        "aggressive_mode": false,
        "power_save_threshold": 20,
        "level_critical": 10,
        "level_low": 20,
        "level_medium": 80
    },
    "reconnect_policy": {
        "mode": "auto",
        "max_backoff_level": 16,
        "max_consecutive_failures": 5,
        "default_backoff_ms": 30000,
        "initial_backoff_ms": 500,
        "max_backoff_ms": 60000
    },
    "network_quality": {
        "rtt_excellent_ms": 50,
        "rtt_good_ms": 150,
        "rtt_poor_ms": 300,
        "rtt_bad_ms": 1000,
        "packet_loss_low": 0.01,
        "packet_loss_medium": 0.05,
        "packet_loss_high": 0.20
    },
    "tier_system": {
        "latency_sample_size": 20,
        "max_error_history": 1000,
        "max_recovery_attempts": 5,
        "quarantine_time_sec": 300,
        "memory_usage_threshold": 90.0,
        "error_check_window_sec": 60
    },
    "nat_traversal": {
        "enabled": true,
        "mode": "auto",
        "stun_enabled": true,
        "stun_timeout_ms": 2000,
        "upnp_enabled": false,
        "upnp_timeout_ms": 5000,
        "upnp_lease_duration_sec": 3600,
        "hole_punching_enabled": true,
        "hole_punch_max_attempts": 5,
        "hole_punch_retry_backoff_ms": 100,
        "hole_punch_thread_pool_size": 10,
        "heartbeat_interval_sec": 15,
        "cleanup_interval_sec": 60,
        "heartbeat_timeout_ms": 45000,
        "max_external_port_attempts": 10,
        "turn_enabled": true,
        "turn_config": {
            "server_ip": "TURN_SERVER_IP",
            "server_port": 3478,
            "username": "TURN_USERNAME",
            "password": "TURN_PASSWORD",
            "realm": "TURN_REALM"
        },
        "stun_servers": [
            {"hostname": "stun.l.google.com", "port": 19302},
            {"hostname": "stun1.l.google.com", "port": 19302},
            {"hostname": "stun.stunprotocol.org", "port": 3478}
        ],
        "peer_discovery": {
            "enabled": true,
            "discovery_interval_ms": 5000,
            "max_peer_cache": 100,
            "verified_peer_timeout_ms": 300000
        }
    },
    "signaling": {
        "enabled": true,
        "url": "ws://SIGNALING_HOST:8765",
        "reconnect_interval_ms": 5000
    },
    "global_discovery": {
        "enabled": false,
        "discovery_strategy": "broadcast",
        "local_network_scan": true,
        "announce_self": true,
        "announce_interval_ms": 30000,
        "bootstrap_nodes": []
    },
    "logging": {
        "level": "debug",
        "format": "text",
        "file_path": "litep2p.log",
        "max_file_size_mb": 10,
        "retention_days": 7,
        "console_output": true
    },
    "monitoring": {
        "enabled": false,
        "metrics_port": 9090,
        "health_check_interval_ms": 30000
    },
    "remote_control": {
        "enabled": false,
        "allowed_senders": []
    },
    "storage": {
        "peer_db": {
            "enabled": false,
            "path": "",
            "reconnect_candidate_limit": 2000,
            "prune_after_days": 15
        }
    }
}


